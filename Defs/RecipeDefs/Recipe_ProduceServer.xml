<Defs>
    <RecipeDef>
        <defName>MakeServerBasic</defName>
        <label>make a basic server</label>
        <description>Craft a basic server useful for typical operations.</description>
        <workAmount>1200</workAmount>
        <recipeUsers>
            <li>TableMachining</li>
            <li>FabricationBench</li>
        </recipeUsers>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<unfinishedThingDef>UnfinishedServerBasic</unfinishedThingDef>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <products>
            <ServerBasic>1</ServerBasic>
        </products>
        <researchPrerequisite>ServerBasic</researchPrerequisite>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
    </RecipeDef>

